function calculateGrade() {
    // Get input values
    const prelim = parseFloat(document.getElementById('prelim').value);
    const midterm = parseFloat(document.getElementById('midterm').value);
    const final = parseFloat(document.getElementById('final').value);

    // Validate inputs
    if (isNaN(prelim) || isNaN(midterm) || isNaN(final)) {
        document.getElementById('result').innerText = "Please enter valid numbers.";
        return;
    }

    // Calculate total grade
    const totalGrade = (prelim * 0.30) + (midterm * 0.30) + (final * 0.40);

    // Display result
    document.getElementById('result').innerText = `Your total grade is: ${totalGrade.toFixed(2)}%`;
}